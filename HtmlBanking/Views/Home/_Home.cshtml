<div class="row home-row">
    <div class="col-md-12">
        <h2>Welcome Back!</h2>
        <p>This section shows how you can call ASP.NET Web API to get the user details.</p>
        <p data-bind="text: myHometown"></p>

        <p>
            <button id="test" class="btn btn-default">Do Something!</button>
        </p>

        <br>
        <h2>Display Endpoint Result</h2>
        <div id="result"></div>
    </div>
    <div class="col-md-2">


    </div>


</div>


<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script type="text/javascript">


    $(document).ready(function() {

        var data = {
            Message: "nate is cool"
        };
        $("#test").click(function() {

            var request = $.ajax({
                async: true,
                type: "GET",
                dataType: "JSON",
                url: "@Url.Action( "Echo", "Home" )",
                data: data
            });

            request.done((result) => {


                var message = result;
                alert(message);
                $("#result").text(message);
                if (result.status === 200) {

                }

            });

        });


    });

</script>

